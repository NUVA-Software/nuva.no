        alt: "Nuva logotype colored light 1x1",
    },
    {
        name: "colored-light",
        svgPath: "/images/brand/logotype/nuva-logotype-colored-light.svg",
        pngPath: "/images/brand/logotype/nuva-logotype-colored-light.png",
        alt: "Nuva logotype colored light",
    },
    {
        name: "transparent-1x1",
        svgPath: "/images/brand/logotype/nuva-logotype-white-transparent-1x1.svg",
