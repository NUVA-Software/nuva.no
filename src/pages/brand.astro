const graphicsImages = [
    {
        name: "hello",
        svgPath: "/images/hello.svg",
        pngPath: null,
        alt: "Hello",
    },
];
---

<Layout allowRobots={false}>
    <main class="max-w-screen-2xl mx-auto min-h-[calc(100vh-10rem)] pt-16">
        <div class="text-center">
            <h2 class="mt-16 mx-auto font-light font-serif text-3xl">Brand resources</h2>
        </div>
        <ContentSection>
            <h2 class="text-2xl font-bold p-2 lg:p-4">Logomark</h2>
            <ul class="p-2 lg:p-4 grid grid-cols-2 lg:grid-cols-3 gap-2 lg:gap-4">
                {
                    logomarkImages.map((image) => (
                        <li class="flex flex-col justify-center items-center p-2 lg:p-4 bg-foreground/5 rounded-lg">
                            <a href={image.svgPath}>
                                <img
                                    src={image.svgPath}
                                    alt={image.alt}
                                    class="w-32 h-32 object-contain object-center"
                                />
                            </a>
                            <p class="text-sm">{image.name}</p>
                            {image?.svgPath && (
                                <a href={image.svgPath} download class="break-all hover:underline">
                                    <span class="text-sm p-1 bg-purple-500 text-white rounded-lg">SVG</span>
                                    <span>Download</span>
                                </a>
                            )}
                            {image?.pngPath && (
                                <a href={image.pngPath} download class="break-all hover:underline">
                                    <span class="text-sm p-1 bg-green-500 text-white rounded-lg">PNG</span>
                                    <span>Download</span>
                                </a>
                            )}
                        </li>
                    ))
                }
            </ul>

            <h2 class="text-2xl font-bold p-2 lg:p-4">Logotype</h2>
            <ul class="p-2 lg:p-4 grid grid-cols-2 lg:grid-cols-3 gap-2 lg:gap-4">
                {
                    logotypeImages.map((image) => (
                        <li class="flex flex-col justify-center items-center p-2 lg:p-4 bg-foreground/5 rounded-lg">
                            <a href={image.svgPath}>
                                <img
                                    src={image.svgPath}
                                    alt={image.alt}
                                    class="w-32 h-32 object-contain object-center"
                                />
                            </a>
                            <p class="text-sm">{image.name}</p>
                            {image?.svgPath && (
                                <a href={image.svgPath} download class="break-all hover:underline">
                                    <span class="text-sm p-1 bg-purple-500 text-white rounded-lg">SVG</span>
                                    <span>Download</span>
                                </a>
                            )}
                            {image?.pngPath && (
                                <a href={image.pngPath} download class="break-all hover:underline">
                                    <span class="text-sm p-1 bg-green-500 text-white rounded-lg">PNG</span>
                                    <span>Download</span>
                                </a>
                            )}
                        </li>
                    ))
                }
            </ul>

            <h2 class="text-2xl font-bold p-2 lg:p-4">Graphics</h2>
            <ul class="p-2 lg:p-4 grid grid-cols-2 lg:grid-cols-3 gap-2 lg:gap-4">
                {
                    graphicsImages.map((image) => (
                        <li class="flex flex-col justify-center items-center p-2 lg:p-4 bg-foreground/5 rounded-lg">
                            <a href={image.svgPath}>
                                <img
                                    src={image.svgPath}
                                    alt={image.alt}
                                    class="w-32 h-32 object-contain object-center"
                                />
                            </a>
                            <p class="text-sm">{image.name}</p>
                            {image?.svgPath && (
                                <a href={image.svgPath} download class="break-all hover:underline">
                                    <span class="text-sm p-1 bg-purple-500 text-white rounded-lg">SVG</span>
                                    <span>Download</span>
                                </a>
                            )}
                            {image?.pngPath && (
                                <a href={image.pngPath} download class="break-all hover:underline">
                                    <span class="text-sm p-1 bg-green-500 text-white rounded-lg">PNG</span>
                                    <span>Download</span>
                                </a>
                            )}
                        </li>
                    ))
                }
            </ul>
        </ContentSection>
    </main>
</Layout>
