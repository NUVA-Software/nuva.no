---
interface Props {
    variant?: "primary" | "primaryOutline";
    href?: string;
    size?: "sm" | "md" | "lg";
}

const { variant = "primary", size = "md", href } = Astro.props;

export const ButtonClass = {
    shared: "w-full text-center inline-block rounded-xl leading-none border-2",
    size: {
        sm: "px-3 py-2",
        md: "p-4",
        lg: "px-4 py-8",
    },
    variant: {
        primary:
            "border-primary-500 bg-primary-500 text-white hover:bg-primary-600 hover:border-primary-600 focus:bg-primary-600 focus:border-primary-600",
        primaryOutline:
            "border-primary-500 bg-transparent text-primary-500 hover:bg-primary-600 hover:border-primary-600 hover:text-white focus:bg-primary-600 focus:border-primary-600 focus:text-white",
    },
};

const buttonClasses = `${ButtonClass.shared} ${ButtonClass.size[size]} ${ButtonClass.variant[variant]}`;
---

{
    !!href === false && (
        <button class={buttonClasses}>
            <slot />
        </button>
    )
}

{
    !!href === true && (
        <a href={href} class={buttonClasses}>
            <slot />
        </a>
    )
}
