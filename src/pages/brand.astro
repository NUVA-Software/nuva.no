const logotypeImages = [
    {
        name: "colored-dark-1x1",
        svgPath: "/images/brand/logotype/nuva-logotype-colored-dark-1x1.svg",
        pngPath: "/images/brand/logotype/nuva-logotype-colored-dark-1x1.png",
        alt: "Nuva logotype colored dark 1x1",
    },
    {
        name: "colored-dark",
        svgPath: "/images/brand/logotype/nuva-logotype-colored-dark.svg",
        pngPath: "/images/brand/logotype/nuva-logotype-colored-dark.png",
        alt: "Nuva logotype colored dark",
    },
    {
        name: "colored-light-1x1",
        svgPath: "/images/brand/logotype/nuva-logotype-colored-light-1x1.svg",
