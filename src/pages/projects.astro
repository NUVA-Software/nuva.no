---
import Layout from "../layouts/Layout.astro";
import { projects } from "../data/projects";
import ContentSection from "../components/dumb/ContentSection.astro";
import Icon from "../components/dumb/Icon.astro";
import { Flame, QrCode, FileSignature } from "lucide";

const iconMap: Record<string, any> = {
    "flame": Flame,
    "qr-code": QrCode,
    "file-signature": FileSignature,
};
---

<Layout>
    <main class="min-h-[calc(100vh-10rem)]">
        <ContentSection className="pt-16 lg:pt-24 pb-12 lg:pb-16">
            <div class="max-w-2xl" data-animate>
                <h1 class="font-serif font-bold text-4xl lg:text-5xl mb-4">Our work</h1>
                <p class="text-foreground/55 text-lg leading-relaxed">
                    A few of the projects we've shipped. Each one built from scratch to solve a specific problem.
                </p>
            </div>
        </ContentSection>

        <ContentSection className="pb-24 lg:pb-32">
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 lg:gap-8">
                {
                    projects.map((project, i) => (
                        <article
                            class="group relative rounded-xl overflow-hidden border border-border/40 bg-background hover:border-border/80 transition-all duration-300 hover:shadow-xl hover:shadow-foreground/5"
                            data-animate
                            data-delay={String(i * 100)}
                        >
                            <a href={`/projects/${project.slug}`} class="block">
                                <div class="relative h-44 lg:h-52 bg-gradient-to-br from-primary-500/10 via-primary-500/5 to-transparent flex items-center justify-center">
                                    <div class="w-16 h-16 lg:w-20 lg:h-20 rounded-2xl bg-primary-500/10 flex items-center justify-center group-hover:bg-primary-500/15 group-hover:scale-110 transition-all duration-500">
                                        <Icon icon={iconMap[project.icon]} class="w-8 h-8 lg:w-10 lg:h-10 text-primary-500" />
                                    </div>
                                    {project.customer && (
                                        <span class="absolute top-3 left-3 px-2.5 py-1 rounded-md text-xs font-medium bg-background/70 backdrop-blur-sm text-foreground/60">
                                            {project.customer}
                                        </span>
                                    )}
                                </div>
                            </a>

                            <div class="p-6 lg:p-8">
                                <h3 class="font-serif font-bold text-2xl mb-3">
                                    <a href={`/projects/${project.slug}`} class="hover:text-primary-500 transition-colors duration-200">
                                        {project.title}
                                    </a>
                                </h3>

                                <p class="text-foreground/55 leading-relaxed mb-6">
                                    {project.description}
                                </p>

                                <div class="flex flex-wrap gap-2">
                                    <a
                                        href={`/projects/${project.slug}`}
                                        class="inline-flex items-center gap-1.5 px-4 py-2 bg-primary-500 text-white text-sm rounded-lg hover:bg-primary-600 transition-colors duration-200"
                                    >
                                        View Project
                                        <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" /></svg>
                                    </a>

                                    {project.link && (
                                        <a
                                            href={project.link}
                                            target="_blank"
                                            rel="noopener noreferrer"
                                            class="inline-flex items-center gap-1.5 px-4 py-2 border border-border/50 text-foreground/70 text-sm rounded-lg hover:border-border hover:text-foreground transition-all duration-200"
                                        >
                                            Visit Site
                                            <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" /></svg>
                                        </a>
                                    )}

                                    {project.customerLink && (
                                        <a
                                            href={project.customerLink}
                                            target="_blank"
                                            rel="noopener noreferrer"
                                            class="inline-flex items-center gap-1.5 px-4 py-2 border border-border/50 text-foreground/70 text-sm rounded-lg hover:border-border hover:text-foreground transition-all duration-200"
                                        >
                                            Customer Site
                                            <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" /></svg>
                                        </a>
                                    )}
                                </div>
                            </div>
                        </article>
                    ))
                }
            </div>

            <div class="mt-20 text-center" data-animate>
                <h2 class="font-serif font-bold text-3xl mb-4">Got something in mind?</h2>
                <p class="text-foreground/55 text-lg mb-8">Let's talk about your project.</p>
                <a
                    href="/contact"
                    class="inline-flex items-center gap-2 px-7 py-3.5 bg-primary-500 text-white font-medium rounded-lg hover:bg-primary-600 transition-all duration-200 hover:shadow-lg hover:shadow-primary-500/20"
                >
                    Get in touch
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" /></svg>
                </a>
            </div>
        </ContentSection>
    </main>
</Layout>
