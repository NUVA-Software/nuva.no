---
interface Props {
    variant?: "primary";
    href?: string;
    size?: "sm" | "md" | "lg";
}

const { variant = "primary", size = "md", href } = Astro.props;

export const ButtonClass = {
    shared: "w-full text-center inline-block rounded-lg leading-none",
    size: {
        sm: "px-3 py-2",
        md: "p-4",
        lg: "px-4 py-8",
    },
    variant: {
        // primary: "border-primary-500 bg-primary-500 text-white",
        primary: "border-primary-500 bg-primary-500 text-slate-900",
    },
};

const buttonClasses = `${ButtonClass.shared} ${ButtonClass.size[size]} ${ButtonClass.variant[variant]}`;
---

{
    !!href === false && (
        <button class={buttonClasses}>
            <slot />
        </button>
    )
}

{
    !!href === true && (
        <a href={href} class={buttonClasses}>
            <slot />
        </a>
    )
}
