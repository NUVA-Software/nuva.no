---
interface Props {
    variant?: "primary" | "primaryOutline";
    href?: string;
    size?: "sm" | "md" | "lg";
}

const { variant = "primary", size = "md", href } = Astro.props;

export const ButtonClass = {
    shared: "text-center inline-block rounded-lg leading-none border transition-all duration-200",
    size: {
        sm: "px-4 py-2.5 text-sm",
        md: "px-6 py-3.5",
        lg: "px-8 py-5 text-lg",
    },
    variant: {
        primary:
            "border-primary-500 bg-primary-500 text-white hover:bg-primary-600 hover:border-primary-600 hover:shadow-lg hover:shadow-primary-500/20",
        primaryOutline:
            "border-primary-500/30 bg-transparent text-primary-600 dark:text-primary-400 hover:bg-primary-500 hover:border-primary-500 hover:text-white",
    },
};

const buttonClasses = `${ButtonClass.shared} ${ButtonClass.size[size]} ${ButtonClass.variant[variant]}`;
---

{
    !!href === false && (
        <button class={buttonClasses}>
            <slot />
        </button>
    )
}

{
    !!href === true && (
        <a href={href} class={buttonClasses}>
            <slot />
        </a>
    )
}
