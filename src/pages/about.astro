---
import Layout from "../layouts/Layout.astro";
import ContentSection from "../components/dumb/ContentSection.astro";
---

<Layout>
    <main class="min-h-[calc(100vh-10rem)]">
        <ContentSection className="pt-16 lg:pt-24 pb-24 lg:pb-32">
            <div class="max-w-2xl mb-16" data-animate>
                <h1 class="font-serif font-bold text-4xl lg:text-5xl mb-4">The team</h1>
                <p class="text-foreground/55 text-lg leading-relaxed">
                    Three developers in Sandefjord, Norway. We build custom software and hardware for businesses that need something beyond off-the-shelf.
                </p>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-3 gap-6 lg:gap-8">
                <div class="group" data-animate data-delay="0">
                    <div class="relative overflow-hidden rounded-xl mb-5">
                        <img
                            class="w-full aspect-[4/5] object-cover transition-transform duration-500 group-hover:scale-[1.03]"
                            src="/images/people/sander.jpg"
                            alt="Sander Jevnaker"
                        />
                    </div>
                    <h2 class="font-serif font-bold text-xl mb-1">Sander Jevnaker</h2>
                    <p class="text-foreground/50 text-sm">CEO & developer</p>
                </div>
                <div class="group" data-animate data-delay="100">
                    <div class="relative overflow-hidden rounded-xl mb-5">
                        <img
                            class="w-full aspect-[4/5] object-cover transition-transform duration-500 group-hover:scale-[1.03]"
                            src="/images/people/bjornar.jpg"
                            alt="Bjørnar Hagen"
                        />
                    </div>
                    <h2 class="font-serif font-bold text-xl mb-1">Bjørnar Hagen</h2>
                    <p class="text-foreground/50 text-sm">Co-founder & developer</p>
                </div>
                <div class="group" data-animate data-delay="200">
                    <div class="relative overflow-hidden rounded-xl mb-5">
                        <img
                            class="w-full aspect-[4/5] object-cover transition-transform duration-500 group-hover:scale-[1.03]"
                            src="/images/people/egil.jpg"
                            alt="Egil Skjelbred"
                        />
                    </div>
                    <h2 class="font-serif font-bold text-xl mb-1">Egil Skjelbred</h2>
                    <p class="text-foreground/50 text-sm">Co-founder & developer</p>
                </div>
            </div>
        </ContentSection>
    </main>
</Layout>
