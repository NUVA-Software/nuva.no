---
import Layout from "../layouts/Layout.astro";
---

<Layout>
    <main class="max-w-screen-2xl mx-auto min-h-[calc(100vh-10rem)] pt-16">
        <div class="text-center">
            <h2 class="mt-16 mx-auto font-bold font-serif text-4xl">About us</h2>
        </div>
        <section class="p-4 px-4 md:px-8">
            <div class="flex flex-col gap-2 text-center">
                <p>
                    We are a small team of developers who are passionate about creating beautiful and functional
                    websites and apps.
                </p>
            </div>
            <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-8 px-4 lg:px-8 mt-8">
                <div
                    class="flex flex-col items-center w-full h-full rounded-xl p-4 backdrop-blur-md bg-background/10 dark:bg-foreground/5 shadow ring-2 ring-foreground/5 dark:ring-foreground/10"
                >
                    <img
                        class="w-full h-80 object-cover rounded-xl mb-4"
                        src="/images/people/sander.jpg"
                        alt="Sander Jevnaker"
                    />
                    <h2 class="text-2xl font-bold font-serif mb-2">Sander Jevnaker</h2>
                    <p class="opacity-75">CEO and developer</p>
                </div>
                <div
                    class="flex flex-col items-center w-full h-full rounded-xl p-4 backdrop-blur-md bg-background/10 dark:bg-foreground/5 shadow ring-2 ring-foreground/5 dark:ring-foreground/10"
                >
                    <img
                        class="w-full h-80 object-cover rounded-xl mb-4"
                        src="/images/people/bjornar.jpg"
                        alt="Bjørnar Hagen"
                    />
                    <h2 class="text-2xl font-bold font-serif mb-2">Bjørnar Hagen</h2>
                    <p class="opacity-75">Co-founder and developer</p>
                </div>
                <div
                    class="flex flex-col items-center w-full h-full rounded-xl p-4 backdrop-blur-md bg-background/10 dark:bg-foreground/5 shadow ring-2 ring-foreground/5 dark:ring-foreground/10"
                >
                    <img
                        class="w-full h-80 object-cover rounded-xl mb-4"
                        src="/images/people/egil.jpg"
                        alt="Egil Skjelbred"
                    />
                    <h2 class="text-2xl font-bold font-serif mb-2">Egil Skjelbred</h2>
                    <p class="opacity-75">Co-founder and developer</p>
                </div>
            </div>
        </section>
    </main>
</Layout>
