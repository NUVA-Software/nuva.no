---
import Layout from "../layouts/Layout.astro";
import { projects } from "../data/projects";
import ContentSection from "../components/dumb/ContentSection.astro";
---

<Layout>
    <main class="min-h-[calc(100vh-10rem)]">
        <div class="text-center bg-primary-500 text-white pt-16 pb-8">
            <h2 class="mt-4 mx-auto font-bold font-serif text-4xl">Our projects</h2>
        </div>
        <ContentSection className="py-8">
            <ul class="flex flex-col gap-8 md:gap-16">
                {
                    projects.map((project) => (
                        <li class="flex flex-col md:flex-row gap-4 justify-start items-center">
                            <a href={`/projects/${project.slug}`} class="block w-full md:w-64 h-40 flex-shrink-0">
                                <img
                                    src={project.image}
                                    alt={project.title}
                                    class="w-full h-full object-cover shadow-lg rounded-lg hover:opacity-75"
                                />
                            </a>
                            <div class="flex-grow">
                                <h3 class="font-bold font-serif text-xl">
                                    <a
                                        href={`/projects/${project.slug}`}
                                        class="hover:underline hover:text-primary-500"
                                    >
                                        {project.title}
                                    </a>
                                </h3>
                                <p>{project.description}</p>
                                <p>
                                    <a href={`/projects/${project.slug}`} class="text-primary-500 underline">
                                        Read more
                                    </a>
                                </p>
                            </div>
                        </li>
                    ))
                }
            </ul>
        </ContentSection>
    </main>
</Layout>
